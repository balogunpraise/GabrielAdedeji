@{
    ViewData["Title"] = "Add Music";
    SheetViewModel sheet = new SheetViewModel();
    var error = ViewData["Error"] as string;

}

<div class="d-flex justify-content-center align-item-center">
    <div class="card" style="width: 24rem;">
        <div class="card-body">
            <h3 class="card-title text-center">Enter Details Here</h3>

            @if (!string.IsNullOrEmpty(error))
            {
                <div class="alert alert-danger">@error</div>
            }


        <form method="post" asp-controller="Dashboard" asp-action="AddBook">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" asp-for=@sheet.Name name="name" id="name" required />
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" asp-for=@sheet.Description name="description" id="description" required />
            </div>
            <div class="form-group">
                <label for="description">Composer</label>
                <input type="text" class="form-control" asp-for=@sheet.Composer name="composer" id="composer" required />
            </div>
            <div class="form-group">
                <label for="name">Url</label>
                <input type="text" class="form-control" asp-for=@sheet.Url name="url" id="url" required />
            </div>
            <div class="form-group">
                <label for="name">Price</label>
                <input type="text" class="form-control" asp-for=@sheet.Price name="price" id="price" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Proceed</button>
        </form>
        </div>
    </div>
</div>